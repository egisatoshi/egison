def tensorOrder %A := length (tensorShape A)

def unitTensor ns := generateTensor kroneckerDelta ns

def scalarToTensor x ns := x * unitTensor ns

def zeroTensor ns := generateTensor (\_ -> 0) ns

def (.') %t1 %t2 := sum' (contract (t1 *' t2))

def (.) %t1 %t2 := sum (contract (t1 * t2))
